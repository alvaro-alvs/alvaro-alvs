---

<PageProvider title="Projetos OXX">
    <OxxHeader title="Projetos" />

    <section
        class="relative grid space-y-10 justify-center min-w-screen p-12 pt-0"
    >
        <nav class="max-w-96 w-96 mx-auto">
            <BackButton />
        </nav>

        <div class="">
            <ArticleHeader article_title="Web e Mobile">
                Projetos em Produção
            </ArticleHeader>

            <div
                class="grid 2xl:grid-cols-2 gap-10 max-sm:gap-5 lg:py-10 lg:px-20"
            >
                {
                    ProductionProjects && (
                        <OxxProjects
                            production_projects={ProductionProjects}
                            client:load
                        />
                    )
                }
            </div>

            <ArticleHeader article_title="Em Breve">
                Demonstrações de Interface
            </ArticleHeader>
            
            <div
                class="grid 2xl:grid-cols-2 gap-10 max-sm:gap-5 lg:py-10 lg:px-20"
            >
                {
                    DemoProjects && (
                        <OxxProjects
                            production_projects={DemoProjects}
                            client:load
                        />
                    )
                }
            </div>
        </div>
    </section>
</PageProvider>
<style>
    .project-desc::-webkit-scrollbar {
        display: none;
    }
    .tech-stack-badg {
        font-size: 0.8rem;
        border-radius: 10px;
        border: 1px solid white;
        width: auto;
        padding: 0.25rem;
    }
</style>
