---
import Image from "astro/components/Image.astro";
import { getImage } from "astro:assets";

import profile from "@/assets/image.png";
import iconLinkedin from "@/assets/icons/icon_linkedin.svg";
import iconGithub from "@/assets/icons/icon_github.svg";
import iconMarketplace from "@/assets/icons/icon_marketplace.svg";
import iconAstro from "@/assets/icons/icon_astro.svg";
import iconPython from "@/assets/icons/icon_python.svg";

export const iconData = [
    {
        src: iconLinkedin,
        link: "https://linkedin.com/in/alvaro-nascimento-986407286",
    },
    {
        src: iconGithub,
        link: "https://github.com/alvaro-alvs",
    },
    {
        src: iconMarketplace,
        link: "https://oxx-marketplace.vercel.app/",
    },
    { src: iconAstro, link: "https://astro.build/" },
    {
        src: iconPython,
        link: "https://www.w3schools.com/python/default.asp",
    },
];

// Mapeie os dados para adicionar os resultados de getImage
export const icons = await Promise.all(
    iconData.map(async (icon) => {
        const image = await getImage({ src: icon.src });
        return { ...image, link: icon.link };
    }),
);
---

<div
    id="quem-sou"
    class="max-lg:max-w-screen-xl lg:w-full lg:h-[35rem] xl:max-w-[75rem] flex max-lg:flex-col max-lg:h-max sm:space-x-10 max-lg:space-y-10 rounded max-sm:w-full max-sm:p-4 max-sm:space-y-3 border border-rose-900 bg-rose-900/5 p-10"
>
    <figure class="h-full border-rose-900 aspect-square rounded-lg">
        <Image class="h-full object-cover" src={profile} alt="" />
    </figure>

    <div class="lg:max-w-1/2 h- py-1 self-center">
        <header class="space-y-2">
            <h3 class="text-xl bg-gradient-to-b from-red-500 to-indigo-500 bg-clip-text text-transparent w-max">Quem Sou</h3>

            <h1 class="text-3xl">Álvaro Nascimento</h1>
            <h2 class="text-md">Desenvolvedor Full Stack</h2>
        </header>

        <p class="my-10 sm:max-w-full">
            <em class="bg-gradient-to-r from-red-500 via-rose-500 via-fuchsia-500 to-indigo-500 bg-clip-text text-transparent font-semibold text-[103%]">Desenvolvedor full stack com mais de 5 anos de experiência</em> sou um profissional dedicado e apaixonado por criar soluções digitais inovadoras. 
            Especializado em linguagens como JavaScript, Python, C# e TypeScript, sou capaz de desenvolver aplicações web e mobile. <br />
            Sou um entusiasta de novas tecnologias e busco constantemente me atualizar para oferecer as melhores soluções para os nossos clientes. <br /><br />
            Estou sempre disposto a compartilhar meus conhecimentos e aprender com os outros.
        </p>

        <footer class="flex justify-between h-14 max-sm:h-10 flex-wrap">
            {
                icons.map((icon) => (
                    <a
                        target="_blank"
                        class="h-full"
                        href={icon.link}
                        rel="noopener noreferrer"
                    >
                        <img
                            class={
                                "h-full transition hover:scale-110 cursor-pointer"
                            }
                            src={icon.src}
                            alt={""}
                        />
                    </a>
                ))
            }
        </footer>

        <!-- <img class="" src="/OxxTechStack.svg" alt=""> -->
    </div>
</div>
